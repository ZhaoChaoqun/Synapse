# Environment
ENVIRONMENT=development

# LLM Provider: "anthropic" (via Agent Maestro) or "gemini"
# Default: anthropic (free via GitHub Copilot)
LLM_PROVIDER=anthropic

# API Keys (only needed if using Gemini provider)
GEMINI_API_KEY=your_gemini_api_key_here

# Agent Maestro Configuration (for free Claude access via GitHub Copilot)
# Requires VS Code with Agent Maestro extension running
AGENT_MAESTRO_URL=http://localhost:23333/api/anthropic
CLAUDE_MODEL_LIGHT=claude-sonnet-4-20250514
CLAUDE_MODEL_HEAVY=claude-sonnet-4-20250514

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/insightsentinel
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Server
HOST=0.0.0.0
PORT=8000
